public class ques23b {
    public static void main(String[] args) {
        for(int j = 0; j<4; j++){
        for(int i = 4-j-1; i>=0; i--){
System.out.print("  ");
        }
        for(int i = j+1; i>=2; i--){
System.out.print(i + " ");
        }
        
        System.out.print("1 ");
        for(int i = 2; i<j+2; i++){
            System.out.print(i + " ");
        }
        System.out.println();

        }
    }
}
